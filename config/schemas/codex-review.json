{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "model": { "type": "string" },
    "role": { "type": "string" },
    "file": { "type": "string" },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "severity": { "type": "string", "enum": ["critical", "high", "medium", "low"] },
          "confidence": { "type": "number" },
          "line": { "type": "integer" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "suggestion": { "type": "string" }
        },
        "required": ["severity", "title", "description", "line", "suggestion", "confidence"],
        "additionalProperties": false
      }
    },
    "summary": { "type": "string" }
  },
  "required": ["model", "role", "file", "findings", "summary"],
  "additionalProperties": false
}
