{
  "description": "AI Review Arena - Multi-AI automated code review hook",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/orchestrate-review.sh",
            "timeout": 300
          }
        ]
      }
    ]
  }
}
