{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "model": { "type": "string" },
    "round": { "type": "integer" },
    "phase": { "type": "string" },
    "defenses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "finding_index": { "type": "integer" },
          "maintain": { "type": "boolean" },
          "revised_confidence": { "type": "number", "minimum": 0, "maximum": 100 },
          "defense": { "type": "string" }
        },
        "required": ["finding_index", "maintain", "revised_confidence", "defense"]
      }
    }
  },
  "required": ["model", "round", "phase", "defenses"]
}
